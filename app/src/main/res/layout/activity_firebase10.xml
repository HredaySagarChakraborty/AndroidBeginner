<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="3"
    android:background="#F48FB1"
    tools:context=".FirebaseActivity10">


    <Button
        android:id="@+id/chooseButton9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.5"
        android:background="#FF80AB"
        android:text="Choose an image" />


    <EditText
        android:id="@+id/editTextId9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:hint="Enter an image" />


    <ImageView
        android:id="@+id/imageViewId9"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1.5" />

    <Button
        android:id="@+id/saveButton9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:background="#F48FB1"
        android:text="Save image" />


    <Button
        android:id="@+id/displayButton9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:background="#F48FB1"
        android:text="Display image" />


</LinearLayout>